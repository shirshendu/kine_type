%div#subtitle.text-center.text-info
%div#wave-timeline
%div#waveform
.row{:style => "margin: 30px 0"}
  .col-sm-8
    %p
      Click on a region to enter an annotation.
      %br
        Shift-click plays a region in a loop.
  .col-sm-2
    %button.btn.btn-primary.btn-block{"data-action" => "play"}
      %span#play
        %i.glyphicon.glyphicon-play
        Play
      %span#pause{:style => "display: none;"}
        %i.glyphicon.glyphicon-pause
        Pause
  .col-sm-2
    %button.btn.btn-info.btn-block{"data-action" => "export", :title => "Export annotations to JSON"}
      %i.glyphicon.glyphicon-file
      Export
%form.hide{:name => "edit", :role => "form", :style => "margin: 30px 0;"}
  .form-group.col-md-3
    %label{:for => "start"} Start
    %input#start.form-control{:name => "start"}
  .form-group.col-md-3
    %label{:for => "end"} End
    %input#end.form-control{:name => "end"}
  .form-group.col-md-3
    %label{:for => "note"} Note
    %textarea#note.form-control{:name => "note", :rows => "1"}
  .form-group.col-md-3
    %label{:for => "type"} Type
    %select#type.form-control{:name => "type"}
      %option{ value: 'sentence' } Sentence
      %option{ value: 'phrase' } Phrase
  %button.btn.btn-success.col-md-2{:type => "submit"} Save
  %button.btn.btn-danger.col-md-2{"data-action" => "delete-region", :type => "button"} Delete
%iframe{ src: '/editor/index.html', seamless: true, height: '600px', width: '100%' }
